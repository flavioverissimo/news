<%- include("../partials/headerAdmin.ejs")%>
<div>
  <h1>Create User</h1>
  <form class="w-50 mx-auto d-flex flex-column mt-5" method="post">
    <div class="form-group mb-3">
      <label for="username" class="text-uppercase">Username</label>
      <input type="text" class="form-control py-3" id="username" name="username">
    </div>
    <div class="form-group mb-3">
      <label for="password" class="text-uppercase">Password</label>
      <input type="password" class="form-control py-3" id="password" name="password">
    </div>
    <div class="form-group mb-3">
      <label for="roles" class="text-uppercase">Roles</label>
      <select class="form-control py-3" id="roles" name="roles">
        <option value="user">user</option>
        <option value="admin">admin</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3 text-uppercase py-3">Create</button>
  </form>
</div>
  
