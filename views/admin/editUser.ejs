<%- include("../partials/headerAdmin.ejs")%>
<div>
  <h1>Edit News</h1>
  <form class="w-50 mx-auto d-flex flex-column mt-5" method="post">
    <div class="form-group mb-3">
      <label for="username" class="text-uppercase">Username</label>
      <input type="text" class="form-control py-3" id="username" name="username" value="<%= users.username %>">
    </div>
    <div class="form-group mb-3">
      <label for="roles" class="text-uppercase">Roles</label>
      <select class="form-control py-3" id="roles" name="roles">
        <% options.forEach(option => { %>
          <option value="<%= option %>" <% if(users.roles == option) { %> selected="selected"  <% } %> ><%= option %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3 text-uppercase py-3">Update</button>
  </form>
</div>
  
<%- include("../partials/footerAdmin.ejs")%>